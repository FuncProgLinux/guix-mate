OUTPUT_TARGET = ./doc/build/

DOC_SRC = ./doc/guix-mate.texi
CSS_DOC_SRC = ./doc/site.css

HTML_OUTPUT = $(OUTPUT_TARGET)/guix-mate.html
PDF_OUTPUT = $(OUTPUT_TARGET)/guix-mate.pdf


docs: ## Compile both PDF & HTML docs for this repository
	@echo "==> [GUIX-MATE/DOCS]: Compiling documentation..."
	@texi2any $(DOC_SRC) --html --css-include=$(CSS_DOC_SRC) --no-split  --output $(HTML_OUTPUT)
	@texi2any $(DOC_SRC) --pdf --output $(PDF_OUTPUT)
	@echo "==> [GUIX-MATE/DOCS]: Cleaning transient files..."
	@rm guix-mate.aux
	@rm guix-mate.log
	@rm guix-mate.toc
	@echo "==> [GUIX-MATE/DOCS]: Documentation is ready!"
