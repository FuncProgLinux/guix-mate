# The packages to load for the Arei Scheme IDE
SCHEME_ENV_PKGS="guile-next guile-ares-rs"

# The location of the manifest file for this project
DEV_ENV_MANIFEST="manifest.scm"

.PHONY: nrepl
nrepl: ## Starts nrepl-server for Emacs Arei
	@echo "==> [GUIX-MATE/DEV]: Starting NREPL for Arei to listen..."
	@guix shell $(SCHEME_ENV_PKGS) -- \
	guile -c '((@ (ares server) run-nrepl-server))'

dev: ## Starts a development guix shell for this channel
	@echo "==> [GUIX-MATE/DEV]: Spinning up a development environment..."
	@guix shell -m $(DEV_ENV_MANIFEST)
